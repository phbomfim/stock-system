<div>
    <h3 class="mt-3 mb-3">Movimentações:</h3>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Local</th>
      <th scope="col">Data</th>
      <th scope="col">Produto</th>
      <th scope="col">Tipo</th>
      <th scope="col">Quantidade</th>
    </tr>
  </thead>
  <tbody>
    <% @movimentacaos.each do |m| %>
        <tr>
            <th scope="row"><%= m.id %></th>
            <td><%= LocalArmazenamento.find(m.local_armazenamento_id).nome %></td>
            <td><%= m.data.strftime("%d-%m-%Y")%></td>
            <td><%= Produto.find(m.produto_id).nome %></td>
            <td><%= m.tipo%> </td>
            <td><%= m.quantidade%></td>
        </tr>
    <% end %>
  </tbody>
</table>

<div>
    <h3 class="mt-5 mb-3"> Upload to database </h3>
    <%= form_with model: @movimentacao, url: upload_path do |form| %>
        <%= form.submit %>
    <% end %>
</div>